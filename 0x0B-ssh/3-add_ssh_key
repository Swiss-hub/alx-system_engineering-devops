#!/usr/bin/env bash
# Add SSH public key to server's authorized_keys file
# This script should be run on the server as the ubuntu user

# Create .ssh directory if it doesn't exist
mkdir -p ~/.ssh

# Add the public key to authorized_keys
echo "ssh-rsa " >> ~/.ssh/authorized_keys

# Set proper permissions
chmod 700 ~/.ssh
chmod 600 ~/.ssh/authorized_keys

echo "SSH public key has been added to authorized_keys"
echo "You can now connect to this server using the ubuntu user without a password" 